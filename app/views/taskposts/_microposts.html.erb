<ul class="media-list">
    <% taskposts.each do |taskpost| %>
        <% user = taskpost.user %>
        <li class="media">
            <div class="media-left">
                <img class="media-object img-rounded" src="<%= gravatar_url(micropost.user, options = {size: 50 }) %>" alt="">
            </div>
            <div class="media-body">
                <div>
                    <%= link_to user.name, user_path(user) %> <span class="text-muted">posted at <%= taskpost.created_at %></span>
                </div>
                <div>
                    <p><%= taskpost.content %></p>
                </div>
                <div>
                    <% if current_user == taskpost.user %>
                        <%= link_to "Delete", taskpost, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
                    <% end %>
                </div>
            </div>
        </li>
    <% end %>
    <%= paginate taskposts %>
</ul>